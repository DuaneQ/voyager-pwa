{
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "javascript": true,
    "typescript": true
  },
  "editor.inlineSuggest.enabled": false,
  "github.copilot.suggestionDelayMs": 1000,
  "github.copilot.advanced": {
    "listCount": 5,
    "inlineSuggestCount": 3
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/**": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true
  }
}